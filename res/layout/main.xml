<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello"
    />
<ToggleButton android:textOn="Stop Mic" android:textOff="Start Mic" android:id="@+id/toggleButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:onClick="toggle"></ToggleButton>
<TextView android:text="Amplitude" android:layout_height="wrap_content" android:id="@+id/tv" android:layout_width="match_parent"></TextView>
<LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:text="Threshold" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:id="@+id/editText1" android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="wrap_content" android:text="10000"></EditText>
    <Button android:text="Set it!" android:id="@+id/setThresh" android:layout_width="wrap_content" android:layout_height="wrap_content" android:onClick="setThresh"></Button>
</LinearLayout>
<Button android:text="Throw Stone" android:id="@+id/throwStone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:onClick="throwStone"></Button>
<TextView android:text="" android:layout_height="wrap_content" android:id="@+id/tv2" android:layout_width="match_parent"></TextView>

</LinearLayout>
